<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <include
    android:id="@+id/layout_header_bookingsummary"
    layout="@layout/layout_header_with_navigation"/>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout_header_bookingsummary">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/margin_all_bannerimage"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/marginleft_all_header"
        android:paddingStart="@dimen/margin_all_bannerimage"
        android:paddingEnd="@dimen/margin_all_bannerimage"
        android:orientation="vertical">

        <TextView
          android:id="@+id/textview_bookingsummery_guestname"
          style="@style/AppLabelsTextAppearance"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/bookingsummary_clientname"/>

        <TextView
          style="@style/AppLabelsTextAppearance"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/imagesize_all_locationimage"
          android:text="@string/bookingsummery_reservationtitle"
          android:textColor="@color/colorBlack"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/marginleft_all_header"
          android:orientation="horizontal">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bookingsummary_bookingconfirmation"
            android:textSize="@dimen/textsize_all_guestdetail"/>

          <TextView
            android:id="@+id/textview_bookingsummary_bookingconfirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/elevation_all_header"
            android:text="216786234897289"
            android:textSize="@dimen/textsize_all_guestdetail"/>

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bookingsummary_hotellabel"
            android:textSize="@dimen/textsize_all_guestdetail"/>

          <TextView
            android:id="@+id/textview_bookingsummary_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/elevation_all_header"
            android:text="Address Downtown"
            android:textSize="@dimen/textsize_all_guestdetail"/>

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bookingsummary_hotellabel"
            android:textSize="@dimen/textsize_all_guestdetail"/>

          <TextView
            android:id="@+id/textview_bookingsummary_bookingguestname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/elevation_all_header"
            android:text="Mr. John Doe"
            android:textSize="@dimen/textsize_all_guestdetail"/>

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bookingsummary_telephonelabel"
            android:textSize="@dimen/textsize_all_guestdetail"/>

          <TextView
            android:id="@+id/textview_bookingsummary_guesttelephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/elevation_all_header"
            android:text="00971564994350"
            android:textSize="@dimen/textsize_all_guestdetail"/>

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bookingsummary_emaillabel"
            android:textSize="@dimen/textsize_all_guestdetail"/>

          <TextView
            android:id="@+id/textview_bookingsummary_guestemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/elevation_all_header"
            android:text="john@digivalet.com"
            android:textSize="@dimen/textsize_all_guestdetail"/>

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/height_all_verticaldivider"
          android:gravity="center"
          android:orientation="horizontal"
          android:weightSum="2.15">

          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/bookingsummary_guestroomtypelabel"
              android:textSize="@dimen/textsize_all_guestdetail"/>

            <TextView
              android:id="@+id/textview_bookingsummary_guestroomtype"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Delux Courtyard Room"
              android:textSize="@dimen/textsize_all_guestdetail"/>

          </LinearLayout>
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:gravity="center|start">

            <View
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="@color/colorGray"/>

          </LinearLayout>

          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bookingsummary_guestcheckinlabel"
                android:textSize="@dimen/textsize_all_guestdetail"/>

              <TextView
                android:id="@+id/textview_bookingsummary_guestcheckin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue, Aug 07, 2018"
                android:textSize="@dimen/textsize_all_guestdetail"/>

            </LinearLayout>


            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bookingsummary_guestcheckoutlabel"
                android:textSize="@dimen/textsize_all_guestdetail"/>

              <TextView
                android:id="@+id/textview_bookingsummary_guestcheckout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wed, Aug 08, 2018"
                android:textSize="@dimen/textsize_all_guestdetail"/>

            </LinearLayout>
          </LinearLayout>
        </LinearLayout>

        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="@dimen/imagesize_all_locationimage"
          android:background="@color/colorGray"/>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/height_all_verticaldivider"
          android:gravity="center"
          android:orientation="horizontal">

          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/bookingsummary_pricelabel"
              android:textColor="@color/colorBlack"
              android:textSize="@dimen/textsize_all_small"/>


            <TextView
              android:id="@+id/textview_bookingsummary_price"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="899.00 AED"
              android:textColor="@color/colorBlack"
              android:textSize="@dimen/textsize_all_headertitle"/>

          </LinearLayout>

          <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"/>

          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/bookingsummary_guestcount"
              android:textColor="@color/colorBlack"
              android:textSize="@dimen/textsize_all_guestdetail"/>


            <TextView
              android:id="@+id/textview_bookingsummary_guestcount"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="01 Adult"
              android:textColor="@color/colorBlack"
              android:textSize="@dimen/textsize_all_labels"/>

          </LinearLayout>
        </LinearLayout>


      </LinearLayout>

      <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="@dimen/margin_all_bannerimage"
        android:layout_marginStart="@dimen/google_1x"
        android:layout_marginEnd="@dimen/google_1x"
        app:cardCornerRadius="@dimen/margin_all_continueasguest">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <fragment
            android:id="@+id/fragment_bookingsummary_map"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:paddingTop="@dimen/margin_all_vertical"
            android:paddingStart="@dimen/size_socialmedia_mediaicon"
            android:paddingEnd="@dimen/size_socialmedia_mediaicon"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
              android:id="@+id/textview_bookingsummary_hotelname"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Address Downtown"
              android:textSize="@dimen/textsize_all_headertitle"/>

            <TextView
              android:id="@+id/textview_bookingsummary_hoteladdress"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/marginstart_header_search"
              android:gravity="center"
              android:text="Sheikh Mohammed bin Rashid Blvd-Dubai-United Arab Emirates"/>

          </LinearLayout>
        </LinearLayout>

      </android.support.v7.widget.CardView>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/marginleft_all_header"
        android:paddingStart="@dimen/margin_all_bannerimage"
        android:paddingEnd="@dimen/margin_all_bannerimage"
        android:orientation="vertical">

        <TextView
          android:id="@+id/textview_bookingsummary_abouthotel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_all_continueasguest"
          android:layout_gravity="center"
          android:text="@string/bookingsummary_abouthotal"
          android:textColor="@color/colorAboutHotel"
          android:textSize="@dimen/textsize_all_headertitle"/>

        <TextView
          android:id="@+id/textview_bookingsummary_disclaimerlabel"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_all_continueasguest"
          android:text="@string/bookingsummary_disclaimer"
          android:textSize="@dimen/textsize_all_guesttitle"/>

        <TextView
          android:id="@+id/textview_bookingsummary_disclaimer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/bookingsummary_disclamer"/>

        <Button
          android:id="@+id/button_bookingsummary_modifybooking"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/imagesize_all_locationimage"
          android:background="@drawable/all_rounded_button"
          android:text="@string/bookingsummary_modifybooking"
          android:textAllCaps="false"
          android:textColor="@color/white"
          android:textSize="@dimen/textsize_all_labels"/>

        <TextView
          android:id="@+id/textview_bookingsummary_cancelbooking"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/imagesize_all_locationimage"
          android:layout_marginBottom="@dimen/margin_all_vertical"
          android:layout_gravity="center"
          android:text="@string/bookingsummary_cancelbooking"
          android:textSize="@dimen/textsize_all_labels"/>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>
</RelativeLayout>
