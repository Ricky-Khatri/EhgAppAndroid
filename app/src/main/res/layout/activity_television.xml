<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".roomcontrols.TelevisionActivity">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
      layout="@layout/layout_header_with_navigation"/>

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <include
        android:id="@+id/layout_television_tablayout"
        layout="@layout/view_all_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/elevation_all_header"
        android:layout_toStartOf="@+id/appcompatimageview_television_searchicon"/>

      <android.support.v7.widget.AppCompatImageView
        android:layout_marginTop="@dimen/elevation_all_header"
        android:id="@+id/appcompatimageview_television_searchicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:padding="@dimen/elevation_all_header"
        app:srcCompat="@drawable/all_search_icon"/>

    </RelativeLayout>
  </LinearLayout>
</RelativeLayout>