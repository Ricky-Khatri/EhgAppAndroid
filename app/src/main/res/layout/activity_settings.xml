<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".settings.SettingsActivity">

  <include
    android:id="@+id/header_settings"
    layout="@layout/layout_header_with_navigation"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <LinearLayout
      android:id="@+id/linearlayout_setting_preferences"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/textsize_all_labels"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?attr/selectableItemBackground"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/textview_settings_preferences"
        style="@style/AppLabelsTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_preferences"/>

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
          android:id="@+id/imageview_setting_preference"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/all_arrowpointtoright"/>

      </LinearLayout>
    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorHeaderView"/>

    <LinearLayout
      android:id="@+id/linearlayout_settings_support"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/textsize_all_labels"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?attr/selectableItemBackground"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/textview_settings_support"
        style="@style/AppLabelsTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_support"/>

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
          android:id="@+id/imageview_setting_support"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/all_arrowpointtoright"/>

      </LinearLayout>
    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorHeaderView"/>

    <LinearLayout
      android:id="@+id/linearlayout_settings_privacypolicy"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/textsize_all_labels"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?attr/selectableItemBackground"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/textview_settings_privacypolicy"
        style="@style/AppLabelsTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_privacy_policy"/>

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
          android:id="@+id/imageview_setting_privacypolicy"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/all_arrowpointtoright"/>

      </LinearLayout>

    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorHeaderView"/>

    <LinearLayout
      android:id="@+id/linearlayout_settings_termandconditions"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/textsize_all_labels"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?attr/selectableItemBackground"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/textview_settings_termandconditions"
        style="@style/AppLabelsTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_termsandconditions"/>

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
          android:id="@+id/imageview_setting_termsandcondition"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/all_arrowpointtoright"/>

      </LinearLayout>

    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorHeaderView"/>

    <LinearLayout
      android:id="@+id/linearlayout_settings_language"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/textsize_all_labels"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?attr/selectableItemBackground"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/textview_settings_language"
        style="@style/AppLabelsTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_language"/>

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
          android:id="@+id/imageview_setting_language"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/all_arrowpointtoright"/>

      </LinearLayout>
    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/colorHeaderView"/>

    <LinearLayout
      android:id="@+id/linearlayout_settings_userstate"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/textsize_all_labels"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?attr/selectableItemBackground"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/textview_settings_userstate"
        style="@style/AppLabelsTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_sign_in_sign_up"/>

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
          android:id="@+id/imageview_setting_userstate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/all_arrowpointtoright"/>

      </LinearLayout>

    </LinearLayout>
  </LinearLayout>
</LinearLayout>