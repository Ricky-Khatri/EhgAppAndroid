<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <include
    android:id="@+id/layout_enhancestay_header"
    layout="@layout/layout_header_with_navigation"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/layout_enhancestay_header"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/mdtp_date_picker_view_animator_padding_v2"
      android:layout_marginStart="@dimen/marginstart_header_search"
      android:layout_marginEnd="@dimen/mdtp_date_picker_view_animator_padding_v2"
      android:orientation="vertical">

      <TextView
        android:id="@+id/textView_enhancestay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enhancements Daily Breakfast"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textsize_all_guesttitle"/>

      <TextView
        android:id="@+id/textview_enhancestay_typeevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="Buffer BreakFast"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/textsize_all_guestdetail"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
      android:id="@+id/recyclerview_enhancestay"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_all_large"
      android:layout_marginBottom="@dimen/marginstart_header_search"
      android:layout_marginStart="@dimen/marginstart_header_search"
      android:layout_marginEnd="@dimen/marginstart_header_search"/>

    <TextView
      android:id="@+id/textview_enhancestay_totalprice"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="AED400"
      android:textColor="@color/colorBlack"
      android:textSize="@dimen/textsize_all_large"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="@string/enhancestay_totalenhancements"
      android:textColor="@color/colorBlack"/>

    <TextView
      android:id="@+id/textview_enhancestay_saveenhancements"
      android:layout_width="match_parent"
      android:layout_height="@dimen/margin_all_large"
      android:layout_margin="@dimen/height_all_verticaldivider"
      android:gravity="center"
      android:background="@drawable/all_rounded_button"
      android:text="@string/enhancestay_saveandreturnenhancements"
      android:textColor="@color/colorWhite"/>

    <TextView
      android:id="@+id/textview_enhancestay_cancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:textColor="@color/colorBlack"
      android:text="@string/mdtp_cancel"
      android:textSize="@dimen/textsize_all_labels"/>
  </LinearLayout>


</RelativeLayout>