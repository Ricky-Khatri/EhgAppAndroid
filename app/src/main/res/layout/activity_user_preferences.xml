<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".ubyemaar.UserPreferencesActivity">

  <include layout="@layout/layout_header_with_navigation"/>

  <TextView
    android:layout_margin="@dimen/margin_all_vertical"
    android:id="@+id/textview_userpreferences_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/HeaderTextAppearance"
    android:textColor="@color/colorGray"
    android:text="@string/userpreferences_experiencesyoulike"/>

  <View
    android:layout_marginLeft="@dimen/margin_all_vertical"
    android:layout_marginRight="@dimen/margin_all_vertical"
    android:layout_width="match_parent"
    android:background="@color/colorGray"
    android:layout_height="0.5dp"/>

  <android.support.v7.widget.RecyclerView
    android:layout_margin="@dimen/margin_all_vertical"
    android:id="@+id/recyclerview_userpreferences_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  </android.support.v7.widget.RecyclerView>

</LinearLayout>