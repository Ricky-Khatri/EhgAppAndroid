<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".ubyemaar.BenefitsActivity">

  <include layout="@layout/layout_header_with_navigation"/>

  <TextView
    android:id="@+id/textview_benefits_tier"
    style="@style/AppLabelsTextAppearance"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_all_horizontal"
    android:layout_gravity="start"
    android:text="@string/benefits_yourtierbenefits"/>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginEnd="@dimen/margin_all_horizontal"
    android:layout_marginStart="@dimen/margin_all_horizontal"
    android:background="@color/colorDarkerGray"/>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/recyclerview_benefits_benefitslist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/margin_all_horizontal"
    android:layout_marginEnd="@dimen/margin_all_horizontal"
    android:layout_marginBottom="@dimen/margin_all_horizontal">

  </android.support.v7.widget.RecyclerView>
</LinearLayout>