<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"

  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_all_imageview"
    android:paddingBottom="@dimen/padding_all_imageview"
    android:paddingStart="@dimen/imagesize_all_locationimage"
    android:paddingEnd="@dimen/imagesize_all_locationimage"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageView
      android:layout_width="@dimen/height_all_verticaldivider"
      android:layout_height="@dimen/height_all_verticaldivider"
      android:scaleType="centerCrop"
      android:visibility="invisible"
      app:srcCompat="@drawable/ic_launcher_background"
      />

    <TextView
      android:id="@+id/textview_itemsearchchild_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/padding_all_imageview"/>
  </LinearLayout>
  <!--<View
    android:id="@+id/view_itemsearchchild_divider"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:visibility="gone"
    android:background="@color/colorGray"/>-->
</RelativeLayout>
