<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <include
    android:id="@+id/layout_settingpreferences_header"
    layout="@layout/layout_header_with_navigation"/>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_all_horizontal"
    android:layout_below="@+id/layout_settingpreferences_header">

    <TextView
      android:id="@+id/textview_preferences_title"
      style="@style/AppLabelsTextAppearance"
      android:layout_width="wrap_content "
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:text="@string/settingpreferences_notifications"
      android:textColor="@color/colorGray"
      android:textSize="@dimen/textsize_signup_termsandcondition"/>

    <Switch
      android:id="@+id/switch_preferences"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"/>

  </RelativeLayout>
</RelativeLayout>