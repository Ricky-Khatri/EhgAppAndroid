<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >

  <include
    android:id="@+id/layout_settingpreferences_header"
    layout="@layout/layout_header_with_navigation"/>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout_settingpreferences_header"
    android:padding="@dimen/textsize_all_labels"
    android:gravity="center"
    android:weightSum="1.2">
    <TextView
      style="@style/AppLabelsTextAppearance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/settingpreferences_notifications"/>
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:padding="4dp"
      android:gravity="center|end">

      <Switch
        android:id="@+id/switch_settingprefernces_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/textsize_all_labels"
        />
    </LinearLayout>
  </LinearLayout>
</RelativeLayout>