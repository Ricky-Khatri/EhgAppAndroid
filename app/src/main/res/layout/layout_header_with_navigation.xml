<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/colorGray"
  android:elevation="@dimen/dimension_header_elevation">

  <ImageView
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:id="@+id/imageview_header_back"
    android:layout_width="@dimen/dimension_header_back"
    android:layout_height="@dimen/dimension_header_back"
    android:padding="@dimen/dimension_header_button_padding"
    android:tint="@color/white"
    app:srcCompat="@drawable/ic_back_arrow"
    android:contentDescription="@string/text"/>

  <TextView
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/imageview_header_extra"
    android:layout_toRightOf="@+id/imageview_header_back"
    android:id="@+id/textview_header_title"
    android:layout_marginLeft="@dimen/dimension_header_margin_left"
    android:layout_marginRight="@dimen/dimension_header_margin_right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/AppLabelsTextAppearance"
    android:gravity="center"
    android:text=""/>


  <ImageView
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:id="@+id/imageview_header_extra"
    android:layout_width="@dimen/dimension_header_back"
    android:layout_height="@dimen/dimension_header_back"
    android:padding="@dimen/dimension_header_button_padding"
    android:visibility="invisible"
    android:background="@drawable/ic_launcher_background"
    android:contentDescription="TODO"/>

</RelativeLayout>