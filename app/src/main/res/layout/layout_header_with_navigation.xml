<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/colorGray"
  android:elevation="@dimen/elevation_all_header">

  <android.support.v7.widget.AppCompatImageView
    android:id="@+id/imageview_header_back"
    android:layout_width="@dimen/size_all_backicon"
    android:layout_height="@dimen/size_all_backicon"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:padding="@dimen/elevation_all_header"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:tint="@color/white"
    app:srcCompat="@drawable/ic_back_arrow"/>

  <TextView
    android:id="@+id/textview_header_title"
    style="@style/AppLabelsTextAppearance"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/marginleft_all_header"
    android:layout_marginEnd="@dimen/marginright_all_header"
    android:layout_centerVertical="true"
    android:layout_toEndOf="@+id/imageview_header_back"
    android:layout_toStartOf="@+id/imageview_header_extra"
    android:gravity="center"
    android:text=""
    android:textColor="@color/white"/>


  <ImageView
    android:id="@+id/imageview_header_extra"
    android:layout_width="@dimen/size_all_backicon"
    android:layout_height="@dimen/size_all_backicon"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:padding="@dimen/padding_all_headerbutton"
    android:background="@drawable/ic_launcher_background"
    android:contentDescription="@string/all_filter"
    android:visibility="invisible"/>

</RelativeLayout>