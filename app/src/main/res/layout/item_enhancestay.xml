<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_marginBottom="@dimen/elevation_all_header">

  <LinearLayout
    android:id="@+id/linearlayout_itemenhancestay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/elevation_all_header"
    android:layout_marginEnd="@dimen/elevation_all_header"
    android:background="@drawable/all_background_border"
    android:orientation="vertical"
    tools:ignore="UselessParent">

    <com.glide.slider.library.SliderLayout
      android:id="@+id/sliderlayout_itemenhancestay_slider"
      android:layout_width="match_parent"
      android:layout_height="@dimen/height_all_alertdialog"
      android:visibility="gone"
      android:layout_marginTop="@dimen/elevation_all_header"
      android:elevation="@dimen/elevation_all_header"/>
    <android.support.v7.widget.AppCompatImageView
      android:layout_width="match_parent"
      android:layout_height="@dimen/imagesize_all_reservationimage"
      android:scaleType="centerCrop"
      app:srcCompat="@drawable/placeholder"/>

    <com.glide.slider.library.Indicators.PagerIndicator
      android:id="@+id/pageindicator_itemenhancestay"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="@dimen/padding_all_imageview"
      android:orientation="vertical">

      <TextView
        android:id="@+id/textview_itemenhancestay_servicename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginstart_header_search"
        android:textSize="@dimen/textsize_all_guestdetail"
        android:text="DELUXE ROOM"/>

      <TextView
        android:id="@+id/textView_itemenhancestay_servicedescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginstart_header_search"
        android:textSize="@dimen/textsize_all_small"
        android:text="Buffet Breakfast at Address Downtown "
        />


      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"/>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/google_1x"
        android:paddingBottom="@dimen/google_1x"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/marginstart_header_search"
          android:gravity="center"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/textview_itemenhancestay_serviceprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AED 824"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_all_guestdetail"/>


          <TextView
            android:id="@+id/textView_itemenhancestay_perperson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/elevation_all_header"
            android:text="@string/all_perperson"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textsize_all_guestdetail"/>

        </LinearLayout>

        <View
          android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_weight="0.1"
          tools:ignore="NestedWeights"/>


        <TextView
          android:id="@+id/textview_itemenhancestay_selection"
          android:layout_width="@dimen/mdtp_material_button_minwidth"
          android:layout_height="@dimen/height_all_verticaldivider"
          android:layout_marginEnd="@dimen/padding_all_imageview"
          android:background="@drawable/all_background_border"
          android:gravity="center"
          android:text="SELECT"
          android:textColor="@color/colorBlack"
          android:textSize="@dimen/textsize_all_guestdetail"/>

      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

</RelativeLayout>