<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <FrameLayout
    android:id="@+id/framlayoutlayout_lightitem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_all_vertical">

    <com.makeramen.roundedimageview.RoundedImageView
      android:id="@+id/appcompatimageview_light_lighticon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:scaleType="centerCrop"
      android:src="@drawable/placeholder"
      app:riv_corner_radius="10dp"/>

    <TextView
      android:id="@+id/textview_light_lighttitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/margin_all_vertical"
      android:layout_gravity="bottom|center"
      android:textColor="@color/white"
      android:textSize="@dimen/textsize_signup_termsandcondition"/>
  </FrameLayout>
</RelativeLayout>