<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/elevation_all_header">

    <LinearLayout
      android:id="@+id/linearlayout_foryouoffers_sort"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/elevation_all_header"
      android:layout_alignParentStart="true"
      android:paddingStart="@dimen/margin_all_horizontal"
      android:paddingEnd="@dimen/margin_all_horizontal"
      android:background="@drawable/all_rounded_border"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?attr/selectableItemBackground"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        style="@style/AppLabelsTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/elevation_all_header"
        android:text="@string/all_sort"
        />

      <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageview_foryouoffers_sort"
        android:layout_width="@dimen/imagesize_all_locationimage"
        android:layout_height="@dimen/imagesize_all_locationimage"
        android:layout_margin="@dimen/elevation_all_header"
        app:srcCompat="@drawable/all_sorticon"/>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/linearlayout_foryouoffers_filter"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/elevation_all_header"
      android:layout_alignParentEnd="true"
      android:paddingStart="@dimen/margin_all_horizontal"
      android:paddingEnd="@dimen/margin_all_horizontal"
      android:background="@drawable/all_rounded_border"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?attr/selectableItemBackground"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        style="@style/AppLabelsTextAppearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/elevation_all_header"
        android:text="@string/all_filter"
        />

      <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageview_foryouoffers_filter"
        android:layout_width="@dimen/imagesize_all_locationimage"
        android:layout_height="@dimen/imagesize_all_locationimage"
        android:layout_margin="@dimen/elevation_all_header"
        app:srcCompat="@drawable/all_filtericon"/>

    </LinearLayout>

  </RelativeLayout>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/recyclerview_foryouoffers_foryouofferlist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/elevation_all_header"
    android:orientation="vertical">
  </android.support.v7.widget.RecyclerView>

</LinearLayout>