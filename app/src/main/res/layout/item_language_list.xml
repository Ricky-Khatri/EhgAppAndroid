<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/textview_language_languagename"
    style="@style/AppLabelsTextAppearance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/marginright_all_header"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/checkbox_language_languagechekbox"
    android:gravity="left"/>

  <CheckBox
    android:id="@+id/checkbox_language_languagechekbox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/marginleft_all_header"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"/>
</RelativeLayout>