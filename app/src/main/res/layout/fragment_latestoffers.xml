<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_alignParentLeft="true"
      android:layout_margin="@dimen/elevation_all_header"
      android:id="@+id/linearlayout_latestoffers_sort"
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:background="@drawable/all_rounded_button">

      <TextView
        style="@style/AppLabelsTextAppearance"
        android:layout_margin="@dimen/elevation_all_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_sort"
        android:textColor="@color/white"
        />

      <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageview_latestoffers_sort"
        android:layout_margin="@dimen/elevation_all_header"
        android:layout_width="@dimen/imagesize_all_locationimage"
        android:layout_height="@dimen/imagesize_all_locationimage"
        app:srcCompat="@mipmap/ic_launcher"/>

    </LinearLayout>

    <LinearLayout
      android:layout_alignParentRight="true"
      android:layout_margin="@dimen/elevation_all_header"
      android:id="@+id/linearlayout_latestoffers_filter"
      android:orientation="horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:background="@drawable/all_rounded_button">

      <TextView
        style="@style/AppLabelsTextAppearance"
        android:layout_margin="@dimen/elevation_all_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_filter"
        android:textColor="@color/white"
        />

      <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageview_latestoffers_filter"
        android:layout_margin="@dimen/elevation_all_header"
        android:layout_width="@dimen/imagesize_all_locationimage"
        android:layout_height="@dimen/imagesize_all_locationimage"
        app:srcCompat="@mipmap/ic_launcher"/>

    </LinearLayout>

  </RelativeLayout>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/recyclerview_latestoffers_latestofferlist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/padding_all_headerbutton">
  </android.support.v7.widget.RecyclerView>

</LinearLayout>