<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dimension_app_labels"
    android:paddingLeft="@dimen/dimension_app_labels"
    android:paddingRight="@dimen/dimension_app_labels"
    android:orientation="vertical">
    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:scrollbars="none">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:background="@drawable/all_rounded_button">
          <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageview_ubyemaar_profile"
            android:layout_width="@dimen/mdtp_time_label_subscript_size"
            android:layout_height="@dimen/mdtp_time_label_subscript_size"
            android:layout_marginTop="20dp"
            android:layout_marginStart="19dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/all_profileimage_svg"/>
          <TextView
            android:id="@+id/textview_ubyemaar_username"
            style="@style/AppLabelsTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_alignStart="@+id/imageview_ubyemaar_profile"
            android:layout_below="@+id/imageview_ubyemaar_profile"
            android:text="@string/ubyemaar_username"
            android:textColor="@color/white"/>

          <TextView
            android:id="@+id/textview_ubyemaar_membershiptype"
            style="@style/HeaderTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="47dp"
            android:layout_alignParentBottom="true"

            android:layout_alignStart="@+id/imageview_ubyemaar_profile"
            android:text="@string/ubyemaar_blacktext"
            android:textColor="@color/colorHeaderView"/>
          <TextView
            android:id="@+id/textview_ubyemaar_membership"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-47dp"
            android:layout_alignStart="@+id/imageview_ubyemaar_profile"
            android:layout_below="@+id/textview_ubyemaar_membershiptype"
            android:text="@string/ubyemaar_membershiplable"
            android:textColor="@color/colorHeaderView"
            android:textSize="@dimen/dimension_guest_title"/>

          <TextView
            android:id="@+id/textview_ubyemaar_totaluppointcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textview_ubyemaar_membershiptype"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/textview_ubyemaar_amount"
            android:layout_toRightOf="@+id/textview_ubyemaar_membershiptype"
            android:paddingLeft="@dimen/dimension_guest_detail"
            android:gravity="center"
            android:text="@string/ubyemaar_totalupoints"
            android:textColor="@color/colorHeaderView"
            android:textSize="@dimen/mdtp_time_label_subscript_size"/>
          <TextView
            android:id="@+id/textview_ubyemaar_totaluppointlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/textview_ubyemaar_totaluppointcount"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/textview_ubyemaar_amountlabel"
            android:layout_toRightOf="@+id/textview_ubyemaar_membership"
            android:gravity="center"
            android:text="@string/ubyemaar_totalupointslabel"
            android:textColor="@color/colorHeaderView"
            android:textSize="@dimen/dimension_guest_title"/>

          <TextView
            android:id="@+id/textview_ubyemaar_amount"
            style="@style/HeaderTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textview_ubyemaar_totaluppointcount"
            android:layout_alignStart="@+id/textview_ubyemaar_amountlabel"
            android:text="@string/ubyemaar_amountlabel"
            android:textColor="@color/colorHeaderView"/>
          <TextView
            android:id="@+id/textview_ubyemaar_amountlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="@dimen/dimension_continue_as_guest"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textview_ubyemaar_amount"
            android:text="@string/ubyemaar_availabletoredeemlabel"
            android:textColor="@color/colorHeaderView"
            android:textSize="@dimen/dimension_guest_title"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/mdtp_time_label_subscript_size"
            android:layout_alignBaseline="@+id/textview_ubyemaar_amount"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textview_ubyemaar_membershiptype"
            android:layout_toRightOf="@+id/textview_ubyemaar_amount"
            android:gravity="center"
            android:text="@string/ubyemaar_aedlabel"
            android:textColor="@color/colorHeaderView"
            android:textSize="@dimen/dimension_guest_detail"/>

        </RelativeLayout>
        <LinearLayout
          android:id="@+id/linearlayout_fragmentubyemaar_profile"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/dimension_guest_detail"
          android:paddingTop="@dimen/dimension_continue_as_guest"
          android:paddingBottom="@dimen/dimension_app_labels"
          android:paddingStart="@dimen/dimension_guest_detail"
          android:paddingEnd="@dimen/dimension_continue_as_guest"
          android:gravity="center"
          android:orientation="horizontal">
          <TextView
            android:id="@+id/textview_fragmentubyemaar_profile"
            style="@style/AppLabelsTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ubyemaar_profilelabels"/>
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:srcCompat="@drawable/all_arrowpointtoright"/>
          </LinearLayout>
        </LinearLayout>
        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginStart="@dimen/appcompatimageview_padding_headerdearch"
          android:layout_marginEnd="@dimen/appcompatimageview_padding_headerdearch"
          android:background="@color/colorHeaderView"/>
        <LinearLayout
          android:id="@+id/linearlayout_fragmentubyemaar_upointactivity"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/dimension_continue_as_guest"
          android:paddingBottom="@dimen/dimension_app_labels"
          android:paddingStart="@dimen/dimension_guest_detail"
          android:paddingEnd="@dimen/dimension_continue_as_guest"
          android:gravity="center"
          android:orientation="horizontal">
          <TextView
            android:id="@+id/textview_fragmentubyemaar_upointactivity"
            style="@style/AppLabelsTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ubyemaar_upointlabel"/>
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:srcCompat="@drawable/all_arrowpointtoright"/>
          </LinearLayout>
        </LinearLayout>
        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginStart="@dimen/appcompatimageview_padding_headerdearch"
          android:layout_marginEnd="@dimen/appcompatimageview_padding_headerdearch"
          android:background="@color/colorHeaderView"/>
        <LinearLayout
          android:id="@+id/linearlayout_fragmentubyemaar_preferences"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/dimension_continue_as_guest"
          android:paddingBottom="@dimen/dimension_app_labels"
          android:paddingStart="@dimen/dimension_guest_detail"
          android:paddingEnd="@dimen/dimension_continue_as_guest"
          android:gravity="center"
          android:orientation="horizontal">
          <TextView
            android:id="@+id/textview_fragmentubyemaar_preferences"
            style="@style/AppLabelsTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ubyemaar_preferenceslabel"/>
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:srcCompat="@drawable/all_arrowpointtoright"/>
          </LinearLayout>
        </LinearLayout>
        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginStart="@dimen/appcompatimageview_padding_headerdearch"
          android:layout_marginEnd="@dimen/appcompatimageview_padding_headerdearch"
          android:background="@color/colorHeaderView"/>
        <LinearLayout
          android:id="@+id/linearlayout_fragmentubyemaar_benefits"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/dimension_continue_as_guest"
          android:paddingBottom="@dimen/dimension_app_labels"
          android:paddingStart="@dimen/dimension_guest_detail"
          android:paddingEnd="@dimen/dimension_continue_as_guest"
          android:gravity="center"
          android:orientation="horizontal">
          <TextView
            android:id="@+id/textview_fragmentubyemaar_benefits"
            style="@style/AppLabelsTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ubyemaar_benefitslabel"/>
          <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:srcCompat="@drawable/all_arrowpointtoright"/>
          </LinearLayout>
        </LinearLayout>
        <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginStart="@dimen/appcompatimageview_padding_headerdearch"
          android:layout_marginEnd="@dimen/appcompatimageview_padding_headerdearch"
          android:background="@color/colorHeaderView"/>
      </LinearLayout>
    </ScrollView>
  </LinearLayout>
</RelativeLayout>
